{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug tests (MS C++ Extension)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/tests",
      "args": [
        // Optional doctest args, for example:
        // "-tc=*vector*", "--success"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "MIMode": "lldb",
      "externalConsole": false,
      "preLaunchTask": "make: build",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for LLDB",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Debug: vector tests",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/tests",
      "args": ["-tc=*vector*"],
      "cwd": "${workspaceFolder}",
      "MIMode": "lldb",
      "externalConsole": false,
      "preLaunchTask": "make: build"
    }
  ]
}
